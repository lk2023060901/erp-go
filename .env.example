# 数据库配置
DATABASE_URL=postgres://erp_user:erp_pass@localhost:5432/erp_db?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_USER=erp_user
DB_PASSWORD=erp_pass
DB_NAME=erp_db

# Redis配置
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE_HOURS=24
REFRESH_TOKEN_EXPIRE_DAYS=30

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=58080
SERVER_TIMEOUT=30s

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json

# 文件上传配置
UPLOAD_MAX_SIZE=10MB
UPLOAD_PATH=./uploads

# CORS配置
CORS_ALLOW_ORIGINS=http://localhost:3000,https://xx.com
CORS_ALLOW_CREDENTIALS=true

# 双因素认证配置
TOTP_ISSUER=ERP System

# 邮件配置（可选）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com